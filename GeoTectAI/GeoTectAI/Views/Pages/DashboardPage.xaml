<Page
    x:Class="GeoTectAI.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GeoTectAI.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    xmlns:lg="clr-namespace:GeoTectAI.Services"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel>
        <ui:TextBlock Text="{Binding [Home_D_1],Source={x:Static lg:LanguageService.Instance}}"
                      TextWrapping="Wrap"/>
        <ui:TextBlock Text="{Binding [Home_D_2],Source={x:Static lg:LanguageService.Instance}}"
                      TextWrapping="Wrap" Margin="0 5"/>
        <ui:Image Source="/Assets/Figure2.jpg" CornerRadius="8" Margin="0 5"/>
        <ui:Image Source="/Assets/Figure3.jpg" CornerRadius="8"/>
    </StackPanel>
</Page>
